<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.CadastroAluno"
    android:background="@drawable/orange_gradient">

  <com.google.android.material.card.MaterialCardView
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:padding="16dp"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
      <!-- Campo para preencher com o nome -->
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/input_nome_activity_cadastro"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/espaco_campos">

        <EditText
            android:id="@+id/ins_nome_activity_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/nome_completo"
            android:inputType="textPersonName" />
      </com.google.android.material.textfield.TextInputLayout>
      <!--***************************************************-->
      <!-- Campo para preencher com o número de telefone -->
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/input_telefone_activity_cadastro"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/espaco_campos">

        <EditText
            android:id="@+id/ins_telefone_activity_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/n_mero_de_telefone"
            android:inputType="phone" />
      </com.google.android.material.textfield.TextInputLayout>
      <!--***************************************************-->
      <!-- Campo para preencher com o e-mail -->
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/input_email_activity_cadastro"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/espaco_campos">

        <EditText
            android:id="@+id/ins_email_activity_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress" />
      </com.google.android.material.textfield.TextInputLayout>
      <!--***************************************************-->
      <!-- Campo para selecionar a universidade -->
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/espaco_campos"
          android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_universidade_activity_cadastro"
            style="@style/AutoCompleteTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/espaco_campos"
            android:layout_weight="1"
            android:hint="@string/universidade">

          <AutoCompleteTextView
              android:id="@+id/ins_universidade_activity_cadastro"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:autofillHints=""
              android:inputType="textPersonName" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_buscar_universidade_activity_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/buscar" />

      </LinearLayout>
      <!--***************************************************-->
      <!-- Campo para selecionar o curso -->
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/input_curso_activity_cadastro"
          style="@style/AutoCompleteTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/espaco_campos"
          android:hint="@string/curso"
          android:visibility="gone">

        <AutoCompleteTextView
            android:id="@+id/ins_curso_activity_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:inputType="textPersonName"

            />
      </com.google.android.material.textfield.TextInputLayout>
      <!--***************************************************-->
      <!-- Campo para preencher com a senha -->
      <com.google.android.material.textfield.TextInputLayout
          android:id="@+id/input_senha_activity_cadastro"
          style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/espaco_campos">

        <EditText
            android:id="@+id/ins_senha_activity_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/senha"
            android:inputType="textPassword" />
      </com.google.android.material.textfield.TextInputLayout>
      <!--***************************************************-->
      <!-- Botão para cadastrar o usuário -->
      <Button
          android:id="@+id/btn_cadastrar_activity_cadastro"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:text="@string/cadastrar" />
    </LinearLayout>
    <!--***************************************************-->
  </com.google.android.material.card.MaterialCardView>


  </androidx.constraintlayout.widget.ConstraintLayout>