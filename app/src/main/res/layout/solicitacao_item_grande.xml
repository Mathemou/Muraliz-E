<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    android:layout_marginTop="10dp"
    android:paddingBottom="20dp"
    android:id="@+id/card_view_solicitacao_grande"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent"
    android:layout_marginBottom="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/fundo_card"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/codigo_disciplina_solicitacao_item_grande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginEnd="5dp">

            </TextView>

            <TextView
                android:id="@+id/nome_disciplina_solicitacao_item_grande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="22sp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.25"
                android:background="@color/black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="left"
            android:layout_marginBottom="3dp"
            android:weightSum="1"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/descricao_solicitacao_item_grande"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:textSize="16sp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.25"
                android:background="@color/black" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="right"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            tools:ignore="RtlHardcoded">

            <Button
                android:id="@+id/button_resolvido_solicitacao_item_grande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resolvida"/>
            <TextView
                android:id="@+id/data_solicitacao_item_grande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginStart="100dp"
                android:textSize="12sp" />
        </LinearLayout>












        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:id="@+id/f"
            android:visibility="gone"
            android:layout_marginBottom="5dp">


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.25"
                android:background="#FFFFFF" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>